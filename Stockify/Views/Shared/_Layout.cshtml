<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stockify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stockify.styles.css" asp-append-version="true" />
    <link rel="Images" href="~/Images/dollar_sign.png" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <strong><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Stockify </a></strong>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <strong><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link text-dark" asp-area="" asp-controller="Crypto" asp-action="Crypto">Crypto</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="Stock">Stock</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="Company">Company</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a></strong>
                        </li>
                    </ul>
                </div>
                <img src="~/Images/dollar_sign.png" width="50" height="50" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Stockify - <a asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
