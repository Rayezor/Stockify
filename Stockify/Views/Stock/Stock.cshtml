@model IEnumerable<Stockify.Models.Stock>

@{
    ViewData["Title"] = "Stock";
}

<h1>Stock</h1>

<p>
    <a class="btn btn-outline-success" asp-action="CreateStock">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketCap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <b>Company Employees: </b>@item.Company.Employees
             </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="EditStock" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="bn btn-outline-info" asp-action="DetailsStock" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                <a class="btn btn-danger" asp-action="DeleteStock" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                @*@Html.ActionLink("Edit", "EditStock", new {id=item.Id}) |
                @Html.ActionLink("Details", "DetailsStock", new {id=item.Id}) |
                @Html.ActionLink("Delete", "DeleteStock", new {id=item.Id})*@
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a class="btn btn-outline-success" asp-action="CreatePortfolio">Create Portfolio</a>
</p>
