@model IEnumerable<Stockify.Models.Stock>

@{
    ViewData["Title"] = "Stock";
}

<h1>Stock</h1>

<p>
    <a asp-action="CreateStock">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketCap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PERatio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exchange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PERatio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exchange)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditStock", new {id=item.Id}) |
                    @Html.ActionLink("Details", "DetailsStock", new {id=item.Id}) |
                    @Html.ActionLink("Delete", "DeleteStock", new {id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
