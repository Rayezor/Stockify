@model IEnumerable<Stockify.Models.Company>

@{
    ViewData["Title"] = "Company";
}

<h1>Company</h1>

<p>
    <a class="btn btn-outline-success" asp-action="CreateCompany">Create New</a>
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
               @* @Html.ActionLink("Company Name", "Index", new { sortOrder = ViewBag.NameSortParm })*@
            </th>
           @* <th>*@
               @* @Html.ActionLink("Start Date", "Index", new { sortOrder = ViewBag.DateSortParm })*@
            @*</th>*@
            <th>
                @Html.DisplayNameFor(model => model.Employees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Market)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Headquarters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Market)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Headquarters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockId)
             </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="bn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                <a class="btn btn-danger" asp-action="DeleteCompany" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
             @*   @Html.ActionLink("Edit", "Edit", new {  id=item.CompanyName }) |
                @Html.ActionLink("Details", "Details", new {  id=item.CompanyName}) |
                @Html.ActionLink("Delete", "DeleteCompany", new {  id=item.CompanyName })*@
            </td>
        </tr>
}
    </tbody>


</table>
<label>Total Companies:</label>  @ViewBag.Amount
